{
  "name": "ammuench-ts-template",
  "version": "0.0.1",
  "description": "ammuench's template for starting a TS app",
  "license": "n/a",
  "repository": "",
  "author": "",
  "keywords": [
    ""
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "husky": {
    "hooks": {
      "pre-commit": "yarn pq:stage",
      "pre-push": "yarn test"
    }
  },
  "scripts": {
    "build": "yarn clean && yarn lint && echo Using TypeScript && tsc --version && tsc --pretty",
    "build:watch": "yarn build --watch",
    "clean": "rimraf lib",
    "coverage": "nyc --include='src/**/*.ts' --reporter=text --reporter=html --reporter=lcov mocha --require ts-node/register --recursive 'test/**/*.spec.ts'",
    "lint": "pretty-quick",
    "pq:stage": "pretty-quick --staged",
    "test": "yarn build && mocha  -r ts-node/register --recursive 'test/**/*.spec.ts'",
    "test:watch": "yarn test --watch",
    "start": "node dist/index.js"
  },
  "devDependencies": {
    "@types/chai": "^4.1.0",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.14.2",
    "@types/sinon": "^9.0.8",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "husky": "^4.3.0",
    "mocha": "^8.2.0",
    "nyc": "^15.0.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.3"
  },
  "engines": {
    "node": ">=12.18.4"
  },
  "nyc": {
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "lib"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [],
    "all": true
  }
}
